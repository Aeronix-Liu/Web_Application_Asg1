{
  "compilerOptions": {
    // Output directory (compiled JS files)
    "outDir": "./",

    // Language and environment settings
    "module": "ES6",                  // Module system (matches modern browsers)
    "target": "ES2020",               // Supports padStart and modern JS features
    "lib": ["ES2020", "DOM"],         // Includes ES2020 + browser DOM APIs

    // Basic type-checking (balanced strictness)
    "strict": false,                  // Disable overly strict checks for simplicity
    "skipLibCheck": true,             // Skip type checking for library files

    // Optional: Generate source maps for debugging
    "sourceMap": false                // Disable unless you need debugging maps
  },
  "include": ["stayTimer.ts"],        // Only compile your timer file
  "exclude": ["node_modules"]         // Ignore node_modules folder
}